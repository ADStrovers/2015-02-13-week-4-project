<div>
  <p>Your results:</p>
  <form action="/view/<%= params[:type] %>">
    <select name="id">
      <% @results.each do |item| %>
        <option value="<%= item.id %>"><%= item.name %><%= " - #{item.send(params[:field])}" unless params[:field] == "name" %></option>
      <% end %>
    </select>
    <button type="submit">View More Info</button>
  </form>
</div>